{
  "type": "minecraft:multi_action",
  "title": "DWP Settings > Player Location Bar Settings",
  "external_title": "Player Location Bar Settings",
  "can_close_with_escape": false,
  "pause": false,
  "after_action": "close",
  "exit_action": {
    "label": "Done",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "dwp:main"
    }
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": "Do you want to appear in the location bar, or would you prefer to stay hidden?\n"
  },
  "actions": [
    {
      "label": "Toggle Location",
      "action": {
        "type": "run_command",
        "command": "trigger dwp_plb_toggle"
      }
    },
		    {
      "label": "Toggle Location Bar",
      "action": {
        "type": "run_command",
        "command": "trigger dwp_plb_toggle_bar"
      }
    },
		    {
      "label": "View Current Settings",
      "action": {
        "type": "run_command",
        "command": "trigger dwp_plb_get_settings"
      }
    }
  ]
}